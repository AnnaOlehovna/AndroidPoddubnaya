<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="buttonStyle">
        <item name="android:background">#a025c2</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <style name="yellowButton" parent="buttonStyle">    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#0f4060</item>
        <item name="colorControlNormal">#bcd2e1</item>
        <item name="colorControlHighlight">#0f4060</item>
    </style>





</resources>
